<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xmlns:cm="http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.1.0">

    <cm:property-placeholder persistent-id="be.arndep.activemq.pool">
        <cm:default-properties>
            <cm:property name="url" value="tcp://localhost:61616"/>
            <cm:property name="user" value="karaf"/>
            <cm:property name="password" value="karaf"/>
            <cm:property name="broker-name" value="amq-broker"/>
            <cm:property name="maxConnections" value="8"/>
            <cm:property name="maximumRedeliveries" value="0"/>
        </cm:default-properties>
    </cm:property-placeholder>

    <!--PlatformTransactionManager-->
    <reference id="transactionManager" interface="javax.transaction.TransactionManager"/>
    <reference id="platformTransactionManager" interface="org.springframework.transaction.PlatformTransactionManager"/>

    <!-- JMS configuration -->
    <bean id="resourceManager" class="org.apache.activemq.pool.ActiveMQResourceManager" init-method="recoverResource">
        <property name="transactionManager" ref="transactionManager" />
        <property name="connectionFactory" ref="pooledJmsXaConnectionFactory" />
        <property name="resourceName" value="${broker-name}" />
    </bean>

    <bean id="pooledJmsXaConnectionFactory" class="org.apache.activemq.pool.JcaPooledConnectionFactory" init-method="start" destroy-method="stop">
        <property name="name" value="${broker-name}" />
        <property name="maxConnections" value="${maxConnections}" />
        <property name="connectionFactory" ref="jmsXaConnectionFactory" />
        <property name="transactionManager" ref="transactionManager"/>
    </bean>

    <bean id="jmsXaConnectionFactory" class="org.apache.activemq.ActiveMQXAConnectionFactory">
        <property name="userName" value="${user}"/>
        <property name="password" value="${password}"/>
        <property name="brokerURL" value="${url}"/>
        <property name="redeliveryPolicy">
            <bean class="org.apache.activemq.RedeliveryPolicy">
                <property name="maximumRedeliveries" value="${maximumRedeliveries}"/>
            </bean>
        </property>
    </bean>

    <bean id="jmsTxConfig" class="org.apache.camel.component.jms.JmsConfiguration">
        <property name="connectionFactory" ref="pooledJmsXaConnectionFactory"/>
        <property name="transactionManager" ref="platformTransactionManager"/>
        <!--The component is not in SESSION_TRANSACTED mode as it's enlisted in a XA transaction-->
        <property name="transacted" value="false"/>
        <!--Attempt to optimize the perf http://camel.apache.org/jms.html#JMS-transactedConsumption-->
        <property name="lazyCreateTransactionManager" value="false"/>
        <property name="cacheLevelName" value="CACHE_CONNECTION"/>
    </bean>

    <bean id="activemqXa" class="org.apache.activemq.camel.component.ActiveMQComponent">
        <property name="configuration" ref="jmsTxConfig"/>
    </bean>

    <service ref="activemqXa" interface="org.apache.camel.Component">
        <service-properties>
            <entry key="camel.component.name" value="activemq"/>
            <entry key="xaAware" value="true"/>
        </service-properties>
    </service>
</blueprint>